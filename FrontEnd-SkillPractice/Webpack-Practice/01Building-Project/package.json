  },
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "babel-plugin-react-css-modules": "^5.2.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "./src/**/*.{css,scss,less}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
